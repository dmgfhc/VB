    If ss1.ActiveCol = 2 Then
    
        If KeyCode = vbKeyF4 Then
           ss1.Col = 2
           ss1.ROW = ss1.ActiveRow
           Set DD.sPname = ss1
           DD.rControl.Add Item:=2
           DD.rControl.Add Item:=3
           
           DD.nameType = "2"
          
